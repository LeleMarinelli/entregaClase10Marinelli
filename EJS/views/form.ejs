<!-- Formulario para agregar productos -->

<h3 class="text-primary">Agrega un producto a la lista!</h3>
<br>
<form action="/api/products" method="post">
  <div class="form-group">
    <label for="nombre">Nombre</label>
    <input type="text" name="name" id="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="apellido">Precio</label>
    <input type="number" name="price" id="price" class="form-control">
  </div>
  <div class="form-group">
    <label for="edad">Imagen</label>
    <input type="text" name="image" id="image" class="form-control">
  </div>

  <div style="display: flex; justify-content: center; align-items: center;" class="pt-4">
            <input type="submit" value="Crear producto" class="submit-button" style="border-radius:25px; height: 2em;width: 14em; background-color:rgb(154, 221, 162);">
  </div>
</form>

<button name="productos" style="border-radius:25px; height: 3em;width: 20em; display: block; margin: 2em auto; background-color:rgb(162, 154, 221);">
  <a href="/productos" style="color: rgb(255, 255, 255)"> Lista de productos</a>
</button>
